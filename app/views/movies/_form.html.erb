
<%= form_for @movie do |f| %>
<% if @movie.errors.any? %>
<% @movie.errors.full_messages.each do |msg| %>
<div class="alert alert-danger"><%= msg %></div> 
<% end %>
<% end %>
<div class="form-control h-25 ">
	<%= f.label :title %>
	<%= f.text_field :title %>
</div>

<div class="form-control h-50 ">
	<%= f.label :description %>
	<%= f.text_area :description, class:"text-area" %>
</div>
<div class="form-control h-25 ">
	<%= f.submit 'Save' %>
</div>
<% end %>