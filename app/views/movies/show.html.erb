<%= stylesheet_link_tag 'application', media: 'all' %>
<h1><%= @movie.title %></h1>
<p><%= @movie.genre%></p>
<p><%= @movie.description %></p>
<hr>
<h2>All discussions</h2>
<% @movie.impressions.each do |impression| %>
<div>
	<p> <%= impression.body %></p>
</div>
<% end %>
<hr>
<h2>Discussion of movie</h2>
<%= form_for([@movie, @movie.impressions.build]) do |f| %>
	<p>
		Your opinion about movie<br>
		<%= f.text_area(:body) %>
	</p>

	<p>
		<%= f.submit("Add") %>
	</p>
<% end %>